

input[type=text] {
    padding:5px; 
    border:5px solid #ccc; 
    -webkit-border-radius: 5px;
    border-radius: 5px;
}


input[type=password] {
    padding:5px; 
    border:5px solid #ccc; 
    -webkit-border-radius: 5px;
    border-radius: 5px;
}


input[type=text]:focus {
    border-color:#333;
}



input[type=submit] {
    padding:15px 15px; 
    background:#DC143C; 
    border:0 none;
    cursor:pointer;
	color:#FFF8DC;
    -webkit-border-radius: 5px;
	position:center;
    border-radius: 5px; 
}